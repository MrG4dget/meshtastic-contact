{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Agent Skill Manifest (repo-local)",
  "type": "object",
  "required": [
    "schemaVersion",
    "name",
    "entrypoint"
  ],
  "properties": {
    "schemaVersion": {
      "type": "string"
    },
    "name": {
      "type": "string"
    },
    "entrypoint": {
      "type": "string"
    },
    "supports": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "generatedBy": {
      "type": "string"
    }
  },
  "additionalProperties": true
}
